{
  "name": "sim-scenarios-client",
  "version": "1.0.8",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "npm run build:electron && wait-on tcp:5174 && cross-env ELECTRON_START_URL=http://localhost:5174 electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "predist": "node scripts/auto-bump-version.mjs",
    "dist": "npm run build && electron-builder",
    "postdist": "node scripts/write-client-checksum.mjs",
    "build:renderer": "vite build",
    "clean:electron": "rimraf dist-electron",
    "build:electron": "npm run clean:electron && node build-electron.mjs",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.electron.json",
    "start": "npm run build:electron && electron ."
  },
  "build": {
    "appId": "com.knidarkness.sim-scenarios",
    "productName": "Sim Scenarios Client",
    "executableName": "SimScenarios",
    "artifactName": "Sim Scenarios Client Setup ${version}.${ext}",
    "icon": "favicon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "favicon.png",
        "to": "favicon.png"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "shortcutName": "Sim Scenarios Client",
      "uninstallDisplayName": "Sim Scenarios Client"
    }
  },
  "dependencies": {
    "node-simconnect": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.13.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^26.8.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  }
}
