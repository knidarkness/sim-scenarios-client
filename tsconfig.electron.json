{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist-electron",
    "rootDir": "src/electron",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node", "electron"]
  },
  "include": ["src/electron/**/*.ts", "src/electron/**/*.cts"]
}
